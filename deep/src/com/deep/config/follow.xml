<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd">
			
<mapper namespace="follow">

<select id="getFollower" parameterType="int" resultType="int">
	select * 
	from deep_follow
	where deepFollower=#{deepFollower}
</select>

<select id="getFollowing" parameterType="int" resultType="int" >
	select *
	from deep_follow
	where deepFollower=#{deepFollower}
</select>

<insert id="addFollow" parameterType="int" >
	insert into deep_follow(deepFollower, deepFollowing)
	values(#{DeepFollower}, #{DeepFollowing})
</insert>

<delete id="setFollow" parameterType="int" >
	delete from deep_follow
	where deepFollowing =#{DeepFollowing}
</delete>


</mapper>